
@import 'nib'
@import 'normalize'
@import 'fonts'

dark-grey = #333
light-grey = #818181
background-grey = #F0F0F0
custom-pink = #BD255B

a
    text-decoration none

body
    background background-grey
    font-family 'Varela Round', sans-serif
    font-size 16px

figure
    margin 0

ul
    margin 0
    padding 0

.action
    color white
    font-size 1.5em
    margin-right 0.3em

    &.active
        color dark-grey

    &:last-child 
        margin-right 0

    &.light-grey:hover
        color dark-grey

.actions
    background rgba(dark-grey, .4)
    bottom 0
    left 0
    right 0
    position absolute



.author
    color light-grey

.avatar
    height 38px
    width 38px
    img
        width 100%

.border-bottom
    border-bottom 1px solid light-grey

.center-block
    margin 0 auto

.center-text
    text-align center

.container
    font-size 0
    padding 1rem
    text-align center

.close-icon
    background white
    font-size 1.25em
    position absolute
    right .8em
    top .5em

.dark-grey 
    color dark-grey

.desktop-head
    display none

.light-grey 
    color light-grey

.header
    background white
    height 3.2em
    position relative

    .btn-menu
        color dark-grey
        left 1.5em
        top 46%
        margin-top -5px
        position absolute
    

    .title
        font-size 1.2em
        text-align center
        margin 0
        line-height 3em


.hide
    display none

.image
    width 100%

    img
        vertical-align top
        width 100%

.input-text
    border 1px solid light-grey
    border-radius 5px
    height 2.5em
    padding 0.1em 1em 0 2.5em

.left
    float left

.logo
    display none

.menu
    display none

.name
    color dark-grey

.padding
    padding 1em


.playing
    overflow hidden
    width 100%

.playlist
    border-left 1px solid light-grey
    display none
    padding 0 0 0 3em
    width 24.5em

    .author
        margin-top 0

    .name
        font-size 1.25em
        margin 0
    
    .list
        list-style none

        .item
            padding 1em 0

            .action
                font-size 1em

.progress
    
    margin 1em 0
    position relative
    
    .circle
        animation 2.5s circle infinite
        background dark-grey
        border-radius 50%
        height 12px
        position absolute
        right -6px
        top -4px
        width 12px

    .min
    .max
        font-size .9em
        position absolute
        top -0.45em

    .min
        left 0

    .max
        right 0
        

    .total
        background light-grey
        border-radius 5px
        height 5px
        margin 0 auto
        width 70%

    .state
        animation 120s bar-progress linear
        background custom-pink
        border-radius 5px
        height 5px
        position relative
        width 30%

.search-icon
    border-right 1px solid light-grey
    padding .5em
    position absolute
    left .3em
    top .3em

.song
    display inline-block
    font-size 1rem
    margin-bottom 1em
    margin-right 1.4em
    text-align left
    width 46.5%

    &:nth-child(even)
        margin-right 0

    p
        margin .5em 0

.relative
    position relative

.right
    float right

.right-text
    text-align right

.round
    border-radius 50%
    overflow hidden

.username
    display none
    margin-top 10px
    margin-left .5em
    &:after
        border-left 7px solid transparent 
        border-right 7px solid transparent
        border-top 8px solid light-grey 
        content ""
        display inline-block
        margin-left .25em
.vertical-padding
    padding 1em 0


@media screen and (min-width: 480px)

    .action
        margin-right .6em
    
    .song
        width 28%
        &:nth-child(even)
            margin-right 1.4em
        &:nth-child(3n+3)
            margin-right 0

    .progress
        .max
            right 2em

        .min
            left 2em

@media screen and (min-width: 1000px)

    .btn-menu
    .title
        display none

    .container
        padding 0
        padding-top 1rem
        text-align left


    .desktop-head
        display block
        overflow hidden
        padding 1.25em 0em

    .current
        float left
        width 32em

        .description
            display none

    .header
        border-bottom 0
        height auto

    .image.medium
        width 8em

    .logo
        display block

    .menu
        background background-grey
        border-top 1px solid light-grey
        display block
        overflow hidden

        .item
            float left
            list-style none

            a
                border-top 5px solid transparent
                color light-grey
                display block
                padding 0.5em 1em
                text-transform uppercase

                &.active
                    border-top 5px solid light-grey

                &:hover
                    border-top 5px solid light-grey
                    transition .3s border-top

    .playing
        padding-top 1em

        &.large
            margin 0 auto
            overflow hidden
            width 62.5em

    .playlist
        display block

    .song
        margin-right 1.4em
        width 23.32%
        
        &:nth-child(3n+3)
            margin-right 1.4em
        &:nth-child(4n+4)
            margin-right 0



    .user
        display inline-flex
        margin-left 1em
        margin-top 0.2em

    .username
        display block

    .wrap
        width 1000px


@keyframes bar-progress
    0%
        width 0%

    100%
        width 100%

@keyframes circle
    0%
        transform scale(1)

    50%
        transform scale(0.5)
        opacity 0
    100%
        transform scale(1)


